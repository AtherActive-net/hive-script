{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "ES6",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"outDir": "dist/",
		"baseUrl": "./src",
		"lib": ["ES2021", "DOM"],
		"declaration": true,
		"module": "ES2020",
		"skipLibCheck": true,
		"sourceMap": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	
}